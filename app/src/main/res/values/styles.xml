<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom Style -->
    <style name="CustomBaseTheme" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.NoActionBar.Full" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>

        <item name="actionMenuTextColor">@color/colorPrimaryDark</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>
    </style>

    <style name="ActionMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HorizontalProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/holo_blue_dark</item>
    </style>

    <style name="FloatingTextLabel">
        <item name="android:textColorHint">@color/colorGrey7</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_opensans</item>

        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="colorControlNormal">@color/colorGrey7</item>
        <item name="colorControlActivated">@color/colorGrey7</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
    </style>

    <style name="FabStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TextTitleDialog" parent="CustomDialog">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:fontFamily">@font/font_opensans_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/colorGrey3</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="TextBodyDialog">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/font_opensans</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorGrey9B</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:maxWidth">320dp</item>
    </style>

    <style name="TextButtonBodyDialog">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:fontFamily">@font/font_opensans_semibold</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>
